{
    "name": "Docker template app",
    "id": "dockerapp",
    "description": {
        "en": "Template package for a Dockerized YunoHost application",
        "fr": "Modèle d'application dockerisée pour YunoHost"
    },
    "developer": {
        "name": "scith"
    },
    "multi_instance": "false",
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for dockerapp",
                    "fr": "Choisissez un domaine pour dockerapp"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for dockerapp",
                    "fr": "Choisissez un chemin pour dockerapp"
                },
                "example": "/dockerapp",
                "default": "/dockerapp"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public application ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
